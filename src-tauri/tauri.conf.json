{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "EmojiMart",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "writeText": true,
        "readText": true
      },
      "window": {
        "close": true,
        "hide": true,
        "show": true,
        "center": true,
        "setAlwaysOnTop": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "io.github.vemonet.EmojiMart",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    },
    "cli": {
      "description": "EmojiMart picker",
      "longDescription": "EmojiMart picker",
      "afterHelp": "Use --keep to keep the existing item in your clipboard,the emoji will not be copied to the clipboard, and you will only to rely on auto-paste",
      "args": [
        {
          "name": "keep",
          "short": "k"
        },
        {
          "name": "theme",
          "short": "t",
          "takesValue": true,
          "multiple": false,
          "possibleValues": ["light", "dark", "auto"]
        }
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "closable": true,
        "title": "üè™ Emoji Mart",
        "width": 600
      }
    ]
  }
}
