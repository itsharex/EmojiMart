{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Permissions for the main window",
  "local": true,
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "window:allow-center",
    "window:allow-show",
    "window:allow-hide",
    "window:allow-close",
    "window:allow-set-always-on-top",
    "window:allow-set-title",
    "os:allow-platform",
    "os:allow-version",
    "os:allow-os-type",
    "os:allow-family",
    "os:allow-arch",
    "os:allow-exe-extension",
    "os:allow-locale",
    "os:allow-hostname",
    "clipboard-manager:allow-read",
    "clipboard-manager:allow-write",
    "clipboard-manager:default",
    "cli:default",
    "cli:default",
    "os:default"
  ]
}